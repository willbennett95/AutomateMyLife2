<div class="row">
    <div class="col-xs-3">
    </div>
    
    <div class="col-xs-6">
        <h3 style="margin-bottom: 21px;">Find Friends</h3>
            <% @users.each do |user| %>
            <% if user != current_user %>
                <div class="panel panel-default post-panel">
                    <div class="panel-body row">
                        <div class="col-sm-1">
                            <div class="round-image-50"><%= image_tag(user.profilepic.url(:thumb)) %></div>
                        </div>
                        <div class="col-sm-11">
                        <h4 style= "font-weight: bold; margin-top: 12px; margin-left: 12px;"><%=user.username %> </h4>
                        <button style="float: right; margin-top: -21px;"><%= link_to "Add Friend", friend_requests_path(friend_id: user.id), method: :post %></button>
                        </div>
                    </div>
                </div>
            <% end %>
        <% end %>
    </div>
</div>

