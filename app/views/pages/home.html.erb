<div class="row">
    <div class="col-xs-3">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="panel-footer text-center">
                    <div class="row">
                        <div class="col-sm-2"><img src="/default_profile.jpg" height="50px" width="50px" class="profile-picture"></div>
                        <% if user_signed_in? %>
                        <div class="col-sm-10"><h4 style="text-align: center;"><%= current_user.username %></h4></div>
                        <% end %>
                        <div class="col-sm-12" style="margin-top: 10px;"></div>
                            <div class="col-sm-6" style="font-size: 90%; opacity: 0.7; margin-top: 8px">Posts<br>
                                <h6 style="color: blue; font-size: 150%;">5</h6>
                            </div>
                            <div class="col-sm-6" style="font-size: 90%; opacity: 0.7; margin-top: 8px">Followers<br>
                                <h6 style="color: blue; font-size: 150%;">2</h6>
                            </div>
                    </div>
                </div>
            </div>
        </div>    
        <div class="panel panel-default">
            <div class="panel-body">
                <p>level</p>
            </div>
        </div>
    </div>

<div class="col-xs-6">
    <% if user_signed_in? %>
    <%= render '/components/posts_form' %><br><br>
    <% end %>
    
    <% for @p in @posts %>
    <div class="panel panel-default post-panel">
        <div class="panel-body row">
            
            <div class="col-sm-1">
                <img class="profile-picture" src="/default_profile.jpg" height="50px" width="50px"></img>
            </div>
            <div class="col-sm-11">
                <p class="post-title"><a href="/user/<%= User.find(@p.user_id).username %>"><span class="post-user_id"><%= User.find(@p.user_id).username %></span></a> <span class="post-time"> - <%= @p.created_at.to_formatted_s(:short) %></span></p>
                        <% if (user_signed_in? && (current_user.id == @p.user_id))%>
                        <div class="dropdown"  style="float: right;">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <span class="glyphicon glyphicon-option-horizontal" aria-hidden="true"></span></a>
                            <ul class="dropdown-menu">
                                <li><%= link_to('Delete', destroy_post_url(@p), :method => :delete, data: {confirm: 'Are you sure?'}) %></li>
                            </ul> 
                        </div>
                        <% end %>
                   
                <p class="post-body"><%= @p.content %></p>
            </div>
            <div class="col-sm-12">
                <p class="post-upvotes">
                    <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
                </p>
            </div>
            
        </div>
    </div>
    <% end %>
    
    <div class="panel panel-default post-panel">
        <div class="panel-body row">
            <div class="col-sm-12">
                <center><a href="#top"><p style="opacity: 0.7;">Back to Top <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span></p></a></center>
            </div>
        </div>
    </div>
</div>
    <div class="col-xs-3">
        <div class="panel panel-default">
            <div class="panel-body">
                <p>actions</p>
            </div>
        </div>
    </div>
</div>